.container.login-form
  .row
    .col-md-12
      %h1= t('Log_in')
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: { :role=>"form",:class=>"login_form"}) do |f|
        .row
          .form-group.col-md-4
            = f.label :username
            %br/
            = f.text_field :username, autofocus: true ,:class =>"form-control", :placeholder=>"username"
        .row
          .form-group.col-md-4
            = f.label :password
            %br/
            = f.password_field :password, autocomplete: "off",:class =>"form-control",:placeholder=>"Password"
        .row
          .col-md-4
            - if devise_mapping.rememberable?
              .field
                = f.check_box :remember_me
                = f.label :remember_me
        .row
          .col-md-4
            .actions
              = f.submit t('Log_in'), :class => "btn btn-primary"
      = render "users/shared/links"